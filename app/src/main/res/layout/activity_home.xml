<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/image_temp"
        android:layout_width="677dp"
        android:layout_height="851dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="56dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_temp2"
        android:layout_width="677dp"
        android:layout_height="851dp"
        android:layout_marginTop="240dp"
        android:scaleType="fitCenter"
        android:src="@drawable/temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="56dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/light_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="444dp"
        android:src="@drawable/pic_background"
        app:layout_constraintStart_margin="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="439dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/light"
        app:layout_constraintStart_toStartOf="@id/light_border"
        app:layout_constraintEnd_toEndOf="@id/light_border"
        app:layout_constraintTop_toTopOf="@id/light_border"
        app:layout_constraintBottom_toBottomOf="@id/light_border"/>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="790dp"
        android:layout_height="910dp"
        android:scaleType="fitCenter"
        android:src="@drawable/navbar"
        android:translationX="-219dp"
        android:translationY="-268dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="565dp"
        android:layout_height="796dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tag"
        android:translationX="-77dp"
        android:translationY="-161dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="@id/imageView5"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/imageView5"
        app:layout_constraintTop_toTopOf="@id/imageView5"
        app:layout_constraintVertical_bias="0.197" />

    <Switch
        android:id="@+id/switchLight"
        android:layout_width="159dp"
        android:layout_height="62dp"
        android:layout_marginBottom="224dp"
        android:padding="12dp"
        android:text="Light 1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switchLight2"
        android:layout_width="159dp"
        android:layout_height="62dp"
        android:layout_marginBottom="164dp"
        android:padding="12dp"
        android:text="Light 2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
