<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="790dp"
            android:layout_height="910dp"
            android:scaleType="fitCenter"
            android:src="@drawable/navbar"
            android:translationX="-219dp"
            android:translationY="-268dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="565dp"
            android:layout_height="796dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tag"
            android:translationX="-77dp"
            android:translationY="-161dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageView5"
            app:layout_constraintEnd_toEndOf="@id/imageView5"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@id/imageView5"
            app:layout_constraintTop_toTopOf="@id/imageView5"
            app:layout_constraintVertical_bias="0.197" />
        <ImageView
            android:id="@+id/image_temp"
            android:layout_width="677dp"
            android:layout_height="851dp"
            android:layout_marginTop="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <!--    LIGHT-->
        <ImageView
            android:id="@+id/image_light"
            android:layout_width="677dp"
            android:layout_height="851dp"
            android:layout_marginTop="216dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/light_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="424dp"
            android:src="@drawable/pic_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/light"
                app:layout_constraintStart_toStartOf="@id/light_border"
                app:layout_constraintEnd_toEndOf="@id/light_border"
                app:layout_constraintTop_toTopOf="@id/light_border"
                app:layout_constraintBottom_toBottomOf="@id/light_border"/>

        <!--    FAN-->

        <ImageView
            android:id="@+id/image_fan"
            android:layout_width="677dp"
            android:layout_height="851dp"
            android:layout_marginTop="384dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fan_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="592dp"
            android:src="@drawable/pic_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fan"
            app:layout_constraintStart_toStartOf="@id/fan_border"
            app:layout_constraintEnd_toEndOf="@id/fan_border"
            app:layout_constraintTop_toTopOf="@id/fan_border"
            app:layout_constraintBottom_toBottomOf="@id/fan_border"/>

        <!--    DOOR-->
        <ImageView
            android:id="@+id/image_door"
            android:layout_width="677dp"
            android:layout_height="851dp"
            android:layout_marginTop="552dp"
            android:scaleType="fitCenter"
            android:src="@drawable/temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/door_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="756dp"
            android:src="@drawable/pic_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/door"
            app:layout_constraintStart_toStartOf="@id/door_border"
            app:layout_constraintEnd_toEndOf="@id/door_border"
            app:layout_constraintTop_toTopOf="@id/door_border"
            app:layout_constraintBottom_toBottomOf="@id/door_border"/>

        <Switch
            android:id="@+id/switchLight"
            android:layout_width="159dp"
            android:layout_height="62dp"
            android:layout_marginBottom="916dp"
            android:padding="12dp"
            android:text="Light 1"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchLight2"
            android:layout_width="159dp"
            android:layout_height="62dp"
            android:layout_marginBottom="864dp"
            android:padding="12dp"
            android:text="Light 2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchFan"
            android:layout_width="159dp"
            android:layout_height="62dp"
            android:layout_marginBottom="748dp"
            android:padding="12dp"
            android:text="Fan 1"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchFan2"
            android:layout_width="159dp"
            android:layout_height="62dp"
            android:layout_marginBottom="696dp"
            android:padding="12dp"
            android:text="Fan 2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/switchDoor"
            android:layout_width="159dp"
            android:layout_height="62dp"
            android:layout_marginBottom="560dp"
            android:padding="12dp"
            android:text="Door"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>